    "type": "group",
    "children": [
      {
        "label": "Width",
        "name": "width",
        "type": "group",
        "children": [
          {
            "label": "Measurement units",
            "name": "unit",
            "type": "choice",
            "choices": [
              ["px","Pixels (px)"],
              ["vw","Visual widths (vw)"],
              ["%","Percents (%)"],
              ["rem","Root element font size (rem)"]
